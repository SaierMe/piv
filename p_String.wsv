        @ if ((@<字符类型> & 4) == 4) wcscat (Buffer, L"ABCDEFGHIJKLMNOPQRSTUVWXYZ");
        @ if ((@<字符类型> & 8) == 8) wcscat (Buffer, L" !\"#$%&'()*+,-./:;<=>?@[\\]^_`{|}~");
        @ size_t Offset = wcslen (Buffer) - 1;
        @ if (Offset <= 0) return _CT ("");
        @ CVolString szStr;
        @ wchar_t* pStr = szStr.InitWithChars (@<欲取字符数>, ' ');
        @ for (INT i = 0; i < @<欲取字符数>; i++) {
